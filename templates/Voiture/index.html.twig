{% extends 'base.html.twig' %}

{% block title %}Voiture index{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="text-success">Liste des Voitures</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover table-responsive" id="dataTables-example">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Quantité</th>
                                    <th>Prix</th>
                                    <th>Photo</th>
                                    <th>Modèle</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for Voiture in Voitures %}
                                <tr>
                                    <td>{{ Voiture.Quantite }}</td>
                                    <td>{{ Voiture.Prix }}</td>
                                    <td><img src="{{ asset('uploads/images/' ~ Voiture.photo) }}" alt="Photo de la Voiture" class="img-thumbnail" width="50"></td>
                                    <td>{{ Voiture.Modele }}</td>
                                    <td>{{ Voiture.description }}</td>
                                    <td>
                                        <a href="{{ path('app_Voiture_show', {'id': Voiture.id}) }}" class="btn btn-success btn-sm">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                        <a href="{{ path('app_Voiture_edit', {'id': Voiture.id}) }}" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash-alt"></i> Supprimer
                                        </a>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-muted">Aucune Voiture trouvée</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
